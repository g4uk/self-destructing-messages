<form id="message-form" action="/message" method="post">
  <div class="form-group">
    <label for="message">Message</label>
    <textarea class="form-control" id="message" rows="3"></textarea>
    <input type="hidden" name="message" />
  </div>
  <%= partial 'message/password_field' %>
  <div class="form-group">
    <label for="destruction-method">Destruction Method</label>
    <select class="form-control" name="destruction_method">
      <% @destruction_methods.each do |k, v| %>
      <option value="<%= v %>">By <%= k.titleize %></option>
      <% end %>
    </select>
  </div>
  <div class="form-group">
    <label for="destruction-value">Destruction Value</label>
    <input type="text" class="form-control" name="destruction_value">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>